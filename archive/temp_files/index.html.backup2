{% extends "base.html" %}

{% block content %}
<div class="hero">
  <h1>Welcome to {{ config.title }}</h1>
  <p>{{ config.description }}</p>
</div>

<div class="post-list">
  <h2 class="section-heading">Latest Posts</h2>
  {% set blog_section = get_section(path="blog/_index.md") %}
  <ul>
    {% for post in blog_section.pages | sort(attribute="date") | reverse | slice(end=15) %}
      <li class="post-item">
        <h3 class="post-title">
          <a href="{{ post.permalink }}">{{ post.title }}</a>
        </h3>
        <p class="post-meta">{{ post.date | date(format="%B %e, %Y") }}</p>
        {% if post.summary %}
          <p class="post-summary">{{ post.summary | safe }}</p>
        {% endif %}
      </li>
    {% else %}
      <p class="no-posts">No posts found.</p>
    {% endfor %}
  </ul>
  
  {% if blog_section.pages | length > 5 %}
    <div class="view-all">
      <a href="{{ get_url(path='blog') }}" class="view-all-btn">
        View all posts <span>â†’</span>
      </a>
    </div>
  {% endif %}
</div>
{% endblock content %}